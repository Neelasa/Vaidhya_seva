package com.example;

import java.util.*;


public class Example {

	public static void main(String[] args) 
	{
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter the name s1 :");
		String s1 = sc.nextLine();
		System.out.println("Enter the code c1 for s1:");
		int c1 = sc.nextInt();
		sc.nextLine();
		System.out.println();
		
		System.out.println("Enter the name s2:");
		String s2 = sc.nextLine();
		System.out.println("Enter the code c2 for s2:");
		int c2 = sc.nextInt();
		sc.nextLine();
		System.out.println();
		
		System.out.println("Enter the name of s3:");
		String s3 = sc.nextLine();
		System.out.println("Enter the code c3 for s3:");
		int c3 = sc.nextInt();
		sc.nextLine();
		System.out.println();
		
		System.out.println("Enter the name of s4:");
		String s4 = sc.nextLine();
		System.out.println("Enter the code c4 for s4 :");
		int c4 = sc.nextInt();
		sc.nextLine();
		System.out.println();
		
		System.out.println("The name and the string summary:");
		System.out.println(s1+ "-"+c1 );
		System.out.println(s2+ "-"+c2 );
		System.out.println(s3+ "-"+c3 );
		System.out.println(s4+ "-"+c4 );
		
		System.out.println("The length of string s1 is :-" +s1+ ":-"+s1.length());
		System.out.println("The length of string s2 is :-" +s2+ ":-"+s2.length());
		System.out.println("The length of string s3 is :-" +s3+ ":-"+s3.length());
		System.out.println("The length of string s4 is :-" +s4+ ":-"+s4.length());
		
		int l1 = s1.length();
		int l2 = s2.length();
		int l3 = s3.length();
		int l4 = s4.length();
		
		int res =0,rem=0,rev=0;
		
		for(int i=0;i<s1.length();i++)
		{
			while(c1 >0)
			{
				 rem = c1% 10;
				 rev = rev * 10 + rem;
				c1/=10;
				if(l1 <= rev)
				{
					 res = rev;
				}
			}
		
				
		}
		
		System.out.println("The character in that length position is :"+s1.substring(s1.length()-1));
		
		for(int i=0;i<s2.length();i++)
		{
			while(c2 >0)
			{
				 rem = c2% 10;
				 rev = rev * 10 + rem;
				c2/=10;
				if(l2 <= rev)
				{
					 res = rev;
				}
			}
		
				
		}
		System.out.println("The character in that length position is :"+s2.substring(s2.length()-1));
		
		for(int i=0;i<s3.length();i++)
		{
			while(c3 >0)
			{
				 rem = c3% 10;
				 rev = rev * 10 + rem;
				c3/=10;
				if(l3 <= rev)
				{
					 res = rev;
				}
			}
		
				
		}
		System.out.println("The character in that length position is :"+s3.substring(s3.length()-1));
		
		for(int i=0;i<s4.length();i++)
		{
			while(c4 >0)
			{
				 rem = c4% 10;
				 rev = rev * 10 + rem;
				c4/=10;
				if(l4 <= rev)
				{
					 res = rev;
				}
			}
		
				
		}
		System.out.println("The character in that length position is :"+s4.substring(s4.length()-1));
		
		
		
	}

}
