package Doctor.view;

import Doctor.dao.AdminDao;

import Doctor.dao.PatientDao;
import Doctor.dao.ReporterDao;

import javax.swing.*;

public class DoctorView {
    public static void main(String[] args) {
        while (true) {
            String[] options = {
                "Doctor Management",     // AdminDao.java has the CURD operations(Insert, View, Update, Delete). 
                "Patient Management",    // PatientDao.java has these operations(Insert, View, Delete).
                "Reporter Panel",        //ReportDao.java has only 1 operations that is to check the (Check Doctor Leave or available).
                "Exit"                   // Exit application with a good byee statement. 
            };

            int ch = JOptionPane.showOptionDialog(
                null,
                "Select a module to proceed",
                "Hospital Admin Panel",
                JOptionPane.DEFAULT_OPTION,
                JOptionPane.INFORMATION_MESSAGE,
                null,
                options,
                options[0]
            );

            //this will check from the stored content in the database and the CRUD operations ... 

            switch (ch) {
                case 0 -> AdminDao.handleDoctorOperations();       // Doctor CRUD->Insert,Update,Delete,View operations
                case 1 -> PatientDao.handlePatientOperations();     // Patient Insert/View/Delete details
                case 2 -> ReporterDao.handleReporterOperations();   // Leave/give me the status by checking whether the doctor is available or not
                case 3 -> {
                    JOptionPane.showMessageDialog(null, "Exiting system. Goodbye!");
                    System.exit(0);
                }
                default -> JOptionPane.showMessageDialog(null, "Invalid choice. Please try again.");
            }
        }
    }
}
            