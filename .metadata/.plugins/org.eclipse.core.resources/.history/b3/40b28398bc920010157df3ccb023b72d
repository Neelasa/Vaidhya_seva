package com.example;

import java.util.*;


public class Example {

	public static void main(String[] args) 
	{
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter the name: s1");
		String s1 = sc.nextLine();
		System.out.println("Enter the code c1 for s1:");
		int c1 = sc.nextInt();
		sc.nextLine();
		System.out.println();
		
		System.out.println("Enter the name s2:");
		String s2 = sc.nextLine();
		System.out.println("Enter the code c2 for s2:");
		int c2 = sc.nextInt();
		sc.nextLine();
		System.out.println();
		
		System.out.println("Enter the name of s3:");
		String s3 = sc.nextLine();
		System.out.println("Enter the code c3 for s3:");
		int c3 = sc.nextInt();
		sc.nextLine();
		System.out.println();
		
		System.out.println("Enter the name of s4:");
		String s4 = sc.nextLine();
		System.out.println("Enter the code c4 for s4 :");
		int c4 = sc.nextInt();
		sc.nextLine();
		System.out.println();
		
		System.out.println("The name and the string summary:");
		System.out.println(s1+ "-"+c1 );
		System.out.println(s2+ "-"+c2 );
		System.out.println(s3+ "-"+c3 );
		System.out.println(s4+ "-"+c4 );
		
		
		
	}

}
