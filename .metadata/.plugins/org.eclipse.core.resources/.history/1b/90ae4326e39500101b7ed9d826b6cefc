package Doctor.view;

import Doctor.dao.AdminDao;
import Doctor.dao.PatientDao;
import Doctor.dao.ReporterDao;

import javax.swing.*;

public class DoctorView {
    public static void main(String[] args) {
        while (true) {
            String[] options = {
                "Doctor Management",     // Insert, View, Update, Delete
                "Patient Management",    // Insert, View, Delete
                "Reporter Panel",        // Check Doctor Leave
                "Exit"                   // Exit application
            };

            int choice = JOptionPane.showOptionDialog(
                null,
                "Select a module to proceed",
                "Hospital Admin Panel",
                JOptionPane.DEFAULT_OPTION,
                JOptionPane.INFORMATION_MESSAGE,
                null,
                options,
                options[0]
            );

            switch (choice) {
                case 0 -> AdminDao.handleDoctorOperations();       // Doctor CRUD operations
                case 1 -> PatientDao.handlePatientOperations();     // Patient Insert/View/Delete
                case 2 -> ReporterDao.handleReporterOperations();   // Leave status check
                case 3 -> {
                    JOptionPane.showMessageDialog(null, "Exiting system. Goodbye!");
                    System.exit(0);
                }
                default -> JOptionPane.showMessageDialog(null, "Invalid choice. Please try again.");
            }
        }
    }
}