package Doctor.view;

import Doctor.dao.AdminDao;
import Doctor.dao.PatientDao;
import Doctor.dao.ReporterDao;

import java.sql.SQLException;
import javax.swing.*;

public class DoctorView {
    public static void main(String[] args) throws SQLException {
        while (true) {
            String[] options = {
                "Doctor Management",     // AdminDao.java has CRUD operations (Insert, View, Update, Delete)
                "Patient Management",    // PatientDao.java has operations (Insert, View, Delete)
                "Reporter Panel",        // ReporterDao.java checks doctor leave status
                "Suggest Alternate Doctor", // AdminDao.java suggests alternate doctor if assigned one is on leave
                "Exit"                   // Exit application
            };

            int ch = JOptionPane.showOptionDialog(
                null,
                "Select a module to proceed",
                "Hospital Admin Panel",
                JOptionPane.DEFAULT_OPTION,
                JOptionPane.INFORMATION_MESSAGE,
                null,
                options,
                options[0]
            );

            switch (ch) {
                case 0 -> AdminDao.handleDoctorOperations();       // Doctor CRUD
                case 1 -> PatientDao.handlePatientOperations();     // Patient CRUD
                case 2 -> ReporterDao.handleReporterOperations();   // Doctor availability check
                case 3 -> AdminDao.suggestAlternateDoctor();        // Suggest alternate doctor
                case 4 -> {
                    JOptionPane.showMessageDialog(null, "Exiting system. Goodbye!");
                    System.exit(0);
                }
                default -> JOptionPane.showMessageDialog(null, "Invalid choice. Please try again.");
            }
        }
    }
}