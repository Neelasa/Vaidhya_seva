package datastructureday2oftraining;

import java.util.Scanner;

public class Datastructures {

	public static void main(String[] args) {
		//int marks[] = {22,33,44,55,66,77};
//		int marks[] = new int[4];
//		 marks[0]=22;
//		 marks[1]=11;
//		 marks[2]=33;
//		 marks[3]=44;
//		 		
//		//for(int i=0;i<marks.length;i++)
//		for(int n:marks)
//		{
//			//System.out.println(marks[i]);
//			System.out.println(n);
//		}
		
		Scanner sc = new Scanner(System.in);
		System.out.println("enter the no:of students:");
		int n = sc.nextInt();
		int marks[] = new int[n];
		System.out.println(" Enter the marks of the "+n+" students are as follows");
		int sum=0,avg=0;
		for(int i=0;i<n;i++)
		{
			marks[i] = sc.nextInt();
			sum+=marks[i];
		}
		avg+=(sum/marks.length);
		
		System.out.println("The marks of the"+n+"students are as follows:");
		
		//for(int i=0;i<marks.length;i++)
		for(int i :marks)
		{
			//System.out.println(marks[i]);
			System.out.println(i);
			
		}
		System.out.println("the sum of the students is"+sum);
		System.out.println("the avg of the students"+avg);
		
	}

}
